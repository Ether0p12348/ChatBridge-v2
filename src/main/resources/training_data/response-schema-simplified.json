{
    "name": "cb_response",
    "strict": false,
    "json_schema": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "src", "tgt"],
        "properties": {
            "type": {
                "type": "string",
                "enum": ["both", "safe", "explicit"]
            },
            "src": {
                "type": "object",
                "additionalProperties": false,
                "required": ["tag", "lang"],
                "properties": {
                    "tag": {"type": "string"},
                    "lang": {"type": "string"}
                }
            },
            "tgt": {
                "type": "object",
                "additionalProperties": false,
                "required": ["tag", "lang"],
                "properties": {
                    "tag": {"type": "string"},
                    "lang": {"type": "string"},
                    "e": {"type": ["string", "null"]},
                    "s": {"type": ["string", "null"]}
                }
            }
        }
    }
}